@model ProductDto

<form asp-action="ProductCreate">
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="formGroupExampleInput" placeholder="20OFF">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">CategoryName</label>
        <input asp-for="CategoryName" type="text" class="form-control" id="formGroupExampleInput2" placeholder="30">
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Price</label>
        <input asp-for="Price" type="text" class="form-control" id="formGroupExampleInput2" placeholder="20">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control" id="formGroupExampleInput2" placeholder="20">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <a asp-action="ProductIndex" role="button" class="btn btn-primary btn-lg">Back to list</a> <!--Выделение + Tab и Tab + Shift-->
    <input class="btn btn-primary btn-lg" type="submit" value="Create">
</form>