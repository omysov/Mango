@model CouponDto

<form asp-action="CouponDelete">

    <input asp-for="CouponId" hidden/>
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Coupon Code</label>
        <input asp-for="CouponCode" type="text" class="form-control" id="formGroupExampleInput" placeholder="20OFF">
        <span asp-validation-for="CouponCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Discount Amount</label>
        <input asp-for="DiscountAmount" type="text" class="form-control" id="formGroupExampleInput2" placeholder="30">
        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Minimum Amount</label>
        <input asp-for="MinAmount" type="text" class="form-control" id="formGroupExampleInput2" placeholder="20">
        <span asp-validation-for="MinAmount" class="text-danger"></span>
    </div>

    <a asp-action="CouponIndex" role="button" class="btn btn-primary btn-lg">Back to list</a> <!--Выделение + Tab и Tab + Shift-->
    <input class="btn btn-danger btn-lg" type="submit" value="Delete">
</form>