@{
}
@model ProductDto

<form method="post">
    <input asp-for="ProductId" hidden />
     <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="https://imgholder.ru/323x300/9dbf16/fff&text=image" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h2>@string.Format("{0:c}", Model.Price)</h2>
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">@Model.CategoryName</h6>
            <p class="card-text">@Html.Raw(Model.Description)</p>
          <div class="card-footer">
              <input asp-for="Count" class="form-control" type="text" placeholder="Count" aria-label="default input example"/>
              <span asp-validation-for="Count"></span>
              <br />
              <a asp-action="Index" role="button" class="btn btn-primary btn-lg">Back to list</a>
              <input class="btn btn-primary btn-lg" type="submit" value="Add to cart">
          </div>
          </div>
        </div>
      </div>
    </div>
</form>